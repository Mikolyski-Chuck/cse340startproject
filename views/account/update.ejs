<% if (title) { %>
    <h1 class="title-h1"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
            <li>* <%= error.msg %></li>
            <% }) %>
        </ul>
        <% } %>
        
        <section class="form-cont">
            <h2>Account Update</h2>
            <form id="update-acc-form" action="/account/update" method="post">  
              <p>All fields are required.</p>
              <label for="firstname">First Name</label><br>
              <input
                    type="text"
                    name="account_firstname"
                    id="firstname"
                    required
                    value="<%= locals.account_firstname %>"
              ><br>
              <label for="lastname">Last Name</label><br>
              <input
                    type="text"
                    name="account_lastname"
                    id="lastname"
                    required
                    value="<%= locals.account_lastname %>"
              ><br>
              <label for="email">Email Address</label><br>
              <input
                    type="email"
                    name="account_email"
                    id="email"
                    required
                    value="<%= locals.account_email %>"
              ><br>
              <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
              <button type="submit" id="form-acc-up-sub" disabled>Update Account</button>
            </form>
          </section>

          <section class="form-cont" id="update-password">
            <h2>Change Password</h2>
            <form id="update-pass-form" action="/account/update/password" method="post">
              <p>By filling out the feild below your account password will be permanently changed.</p>
              <label for="password">Password</label><br>
              <input
                    type="password"
                    name="account_password"
                    id="password"
                    required
                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"> 
              <br>
              <p class="instruct-p">Password must be at least 12 characters, and contain at least 1 number, 1 capital letter, and 1 special character.</p>
              <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
              <button type="submit" id="form-pass-up-sub" >Update Password</button>
              
            </form>
            </section>

            <script src="../../js/acc-update.js"></script>